{
  "name": "inventory-app-backend",
  "version": "1.0.0",
  "description": "Backend for Inventory Management Application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:nodemon": "nodemon --exec ts-node src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "start:dev": "cross-env NODE_ENV=development node dist/src/index.js",
    "db:generate": "prisma generate",
    "db:push": "cross-env ENV_FILE=.env.development prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "cross-env NODE_ENV=production prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed:prod": "cross-env NODE_ENV=production ts-node prisma/seed.ts"
  },
  "keywords": [
    "inventory",
    "management",
    "express",
    "prisma",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.15",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^5.19.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
